BoxLayout:
    orientation:'horizontal'
    BoxLayout:
        orientation:'vertical'
        Label:
            text:'Sort by:'
        Spinner:
            id:state_select
            text: app.current_state
            value:app.state_codes
            on_press:app.click_for_visited()

        Label:
            text:'Add New Place here'
        Label:
            text:'Name:'
        TextInput:
            id:input_name
            text:''
            multiline:False
            font_size:35
        Label:
            text:'Country:'
        TextInput:
            id:input_country
            text:''
            multiline:False
            font_size:35
        Label:
            text:'Priority:'
        TextInput:
            id:input_priority
            text:''
            multiline:False
            font_size:35
        Button:
            text:'Add Place'
            on_press:app.add_place_button()
        Button:
            text:'Clear'
            on_press:app.clear_button()
    BoxLayout:
        orientation:'vertical'
        Label:
            id:output_label1
            color:(1,1,1,1)
            font_size:10
            text:'Place to visit:'
        BoxLayout:
            orientation:'vertical'
            id:buttonlayout
        Label:
            id:output_label2
            color:(1,1,1,1)
            font_size:15
            text:'Welcome to Travel Tracker 2.0'



